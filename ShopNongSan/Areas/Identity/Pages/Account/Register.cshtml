@page
@model RegisterModel
@{
    Layout = null; // TRANG ĐỘC LẬP, KHÔNG DÙNG LAYOUT
    ViewData["Title"] = "Đăng ký";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - ShopNongSan</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            min-height: 100vh;
            background: radial-gradient(900px 500px at 10% 0%, rgba(0,0,0,.04), transparent), radial-gradient(900px 500px at 90% 100%, rgba(0,0,0,.03), transparent);
        }

        .auth-wrap {
            min-height: 100vh;
            display: grid;
            place-items: center;
            padding: 32px 12px;
        }

        .auth-card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,.08);
            overflow: hidden;
            max-width: 720px;
            width: 100%;
        }

            .auth-card .card-header {
                background: linear-gradient(135deg, #4facfe, #00f2fe);
                color: #0b1b2b;
                border: 0;
            }

        .brand-circle {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: rgba(255,255,255,.8);
            display: grid;
            place-items: center;
            font-weight: 800;
            letter-spacing: .5px;
        }

        .muted {
            color: #6b7280;
        }

        .input-group .btn-outline-secondary {
            border-color: #ced4da;
        }

        .form-floating > .form-control {
            padding-top: 1.625rem;
            padding-bottom: .625rem;
        }
    </style>
</head>
<body>

    <div class="auth-wrap">
        <div class="card auth-card">
            <div class="card-header py-4">
                <div class="d-flex align-items-center gap-3 px-4">
                    <div class="brand-circle">NS</div>
                    <div>
                        <h1 class="h4 mb-1">Tạo tài khoản</h1>
                        <div class="small muted">Đăng ký để mua sắm nông sản sạch nhanh hơn</div>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 p-lg-5">
                <div class="row g-4">
                    <div class="col-lg-7">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <!-- Họ tên -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FullName" class="form-control" placeholder="Nguyễn Văn A" />
                                <label asp-for="Input.FullName">Họ và tên</label>
                                <span asp-validation-for="Input.FullName" class="text-danger"></span>
                            </div>

                            <!-- Địa chỉ -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Address" class="form-control" placeholder="Số nhà, đường, quận/huyện, tỉnh/thành" />
                                <label asp-for="Input.Address">Địa chỉ</label>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Mật khẩu -->
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="form-floating flex-grow-1">
                                        <input asp-for="Input.Password" type="password" class="form-control"
                                               id="pwd" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                                        <label asp-for="Input.Password">Mật khẩu</label>
                                    </div>
                                    <button type="button" class="btn btn-outline-secondary" id="togglePwd" title="Hiện/ẩn mật khẩu" aria-label="Toggle password">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Xác nhận mật khẩu -->
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="form-floating flex-grow-1">
                                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control"
                                               id="pwd2" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                                        <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                                    </div>
                                    <button type="button" class="btn btn-outline-secondary" id="togglePwd2" title="Hiện/ẩn mật khẩu" aria-label="Toggle confirm password">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                                Đăng ký
                            </button>

                            <div class="text-center mt-4">
                                <span class="muted">Đã có tài khoản?</span>
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đăng nhập</a>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-5">
                        <section>
                            <h3 class="h6">Đăng ký bằng dịch vụ khác</h3>
                            <hr />
                            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="small muted">
                                    Chưa cấu hình đăng nhập ngoài (Google, Facebook…). Hãy thêm sau trong cấu hình ứng dụng.
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-secondary"
                                                    name="provider" value="@provider.Name"
                                                    title="Đăng ký bằng @provider.DisplayName">
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS: jQuery + Validate + Unobtrusive + Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            // Toggle hiện/ẩn mật khẩu
            function hookToggle(btnId, inputId) {
                const btn = document.getElementById(btnId);
                const input = document.getElementById(inputId);
                if (!btn || !input) return;
                btn.addEventListener('click', function () {
                    const isPwd = input.getAttribute('type') === 'password';
                    input.setAttribute('type', isPwd ? 'text' : 'password');
                    btn.innerHTML = isPwd ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
                });
            }
            hookToggle('togglePwd', 'pwd');
            hookToggle('togglePwd2', 'pwd2');

            // Bootstrap client-side validation (tùy chọn)
            const form = document.getElementById('registerForm');
            form.addEventListener('submit', function (e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
</body>
</html>
