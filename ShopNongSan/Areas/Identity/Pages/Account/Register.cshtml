@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "/Views/Shared/_Layout.cshtml"; // dùng layout chung (nếu bạn đã cấu hình _ViewStart thì có thể bỏ dòng này)
}

<style>
    .auth-wrap {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(900px 500px at 10% 0%, rgba(0,0,0,.04), transparent), radial-gradient(900px 500px at 90% 100%, rgba(0,0,0,.03), transparent);
        padding: 32px 12px;
    }

    .auth-card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
        overflow: hidden;
    }

        .auth-card .card-header {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            color: #0b1b2b;
            border: 0;
        }

    .brand-circle {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        background: rgba(255,255,255,.8);
        display: grid;
        place-items: center;
        font-weight: 800;
        letter-spacing: .5px;
    }

    .muted {
        color: #6b7280;
    }
</style>

<div class="auth-wrap">
    <div class="container" style="max-width: 720px;">
        <div class="card auth-card">
            <div class="card-header py-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="brand-circle">NS</div>
                    <div>
                        <h1 class="h4 mb-1">Tạo tài khoản</h1>
                        <div class="small muted">Đăng ký để mua sắm nông sản sạch nhanh hơn</div>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 p-lg-5">
                <div class="row g-4">
                    <div class="col-lg-7">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <!-- Họ tên -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FullName" class="form-control" placeholder="Nguyễn Văn A" />
                                <label asp-for="Input.FullName">Họ và tên</label>
                                <span asp-validation-for="Input.FullName" class="text-danger"></span>
                            </div>

                            <!-- Địa chỉ -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Address" class="form-control" placeholder="Số nhà, đường, quận/huyện, tỉnh/thành" />
                                <label asp-for="Input.Address">Địa chỉ</label>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Mật khẩu -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control"
                                       autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                                <label asp-for="Input.Password">Mật khẩu</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Xác nhận -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control"
                                       autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                                <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                                Đăng ký
                            </button>

                            <div class="text-center mt-4">
                                <span class="muted">Đã có tài khoản?</span>
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đăng nhập</a>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-5">
                        <section>
                            <h3 class="h6">Đăng ký bằng dịch vụ khác</h3>
                            <hr />
                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div class="small muted">
                                        Chưa cấu hình đăng nhập ngoài (Google, Facebook…).
                                        Xem hướng dẫn trong tài liệu của Microsoft.
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <div class="d-grid gap-2">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-outline-secondary"
                                                        name="provider" value="@provider.Name"
                                                        title="Đăng ký bằng @provider.DisplayName">
                                                    @provider.DisplayName
                                                </button>
                                            }
                                        </div>
                                    </form>
                                }
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap client-side validation (tuỳ chọn)
        (function () {
            const form = document.getElementById('registerForm');
            form.addEventListener('submit', function (e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}
