@model ShopNongSan.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
    var categories = ViewBag.Categories as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var postUrl = Url.Action("Create", "Products", new { area = "Dashboard" });
}

<form action="@postUrl" method="post" id="createForm" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Slug" class="form-label"></label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Loại</label>
            <select asp-for="CategoryId" asp-items="categories" class="form-select">
                <option value="">-- Chọn loại --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="any" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" type="number" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="col-md-6 d-flex align-items-center">
            <div class="form-check mt-4">
                <input class="form-check-input" asp-for="IsOrganic" />
                <label class="form-check-label" asp-for="IsOrganic">Hữu cơ</label>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a class="btn btn-link" asp-area="Dashboard" asp-controller="Products" asp-action="Index">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="~/Areas/Dashboard/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script>
        document.getElementById('createForm')?.addEventListener('submit', () => {
            console.log('SUBMIT fired');
        });
    </script>
}
