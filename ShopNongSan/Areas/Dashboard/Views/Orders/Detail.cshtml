@model ShopNongSan.Models.Order
@{
    ViewData["Title"] = $"Đơn #{Model.Id}";
}
<div class="row g-3">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <div><strong>Mã đơn:</strong> @Model.Id</div>
                <div><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                <div><strong>Khách hàng:</strong> @Model.User?.Email</div>
                <div><strong>Địa chỉ:</strong> @Model.ShippingAddress</div>
                <div><strong>Tổng tiền:</strong> @Model.Total.ToString("#,0") ₫</div>
                <div class="mt-3">
                    <form method="post" asp-action="UpdateStatus" class="d-flex gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <select name="status" class="form-select">
                            @foreach (var s in new[] { "Pending", "Paid", "Shipped", "Completed", "Canceled" })
                            {
                                <option value="@s" selected="@(Model.Status == s ? "selected" : null)">@s</option>
                            }
                        </select>
                        <button class="btn btn-primary">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm</h5>
                <table class="table align-middle">
                    <thead>
                        <tr><th>Tên</th><th class="text-end">SL</th><th class="text-end">Đơn giá</th><th class="text-end">Thành tiền</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Items)
                        {
                            <tr>
                                <td>@i.Product?.Name</td>
                                <td class="text-end">@i.Quantity</td>
                                <td class="text-end">@i.UnitPrice.ToString("#,0") ₫</td>
                                <td class="text-end">@((i.UnitPrice * i.Quantity).ToString("#,0")) ₫</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
