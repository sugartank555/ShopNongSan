@model ShopNongSan.Models.Order
@{
    ViewData["Title"] = $"Đơn #{Model.Id}";
}

<div class="row g-3">
    <!-- THÔNG TIN ĐƠN -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="h5 mb-0">Đơn #@Model.Id</div>
                    <span class="badge bg-secondary">@Model.Status</span>
                </div>

                <div><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                <div><strong>Khách hàng:</strong> @Model.User?.Email</div>
                <div><strong>Họ tên:</strong> @Model.FullName</div>
                <div><strong>Điện thoại:</strong> @Model.Phone</div>
                <div><strong>Địa chỉ:</strong> @Model.Address</div>
                <div class="mt-2">
                    <strong>Tổng tiền:</strong>
                    <span class="text-danger fw-bold">@Model.Total.ToString("#,0") ₫</span>
                </div>

                <hr />

                <!-- Cập nhật trạng thái -->
                <form method="post"
                      asp-area="Dashboard"
                      asp-controller="Orders"
                      asp-action="UpdateStatus"
                      class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <select name="status" class="form-select">
                        @foreach (var s in new[] { "Pending", "Paid", "Shipped", "Completed", "Canceled" })
                        {
                            <option value="@s" selected="@(Model.Status == s ? "selected" : null)">@s</option>
                        }
                    </select>
                    <button class="btn btn-primary">Cập nhật</button>
                </form>

                <div class="mt-2">
                    <a asp-area="Dashboard" asp-controller="Orders" asp-action="Index" class="btn btn-link p-0">
                        ← Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- SẢN PHẨM TRONG ĐƠN -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm</h5>

                @if (Model.Items == null || !Model.Items.Any())
                {
                    <div class="alert alert-info mb-0">Đơn hàng chưa có sản phẩm.</div>
                }
                else
                {
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th class="text-end">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.Items)
                            {
                                var name = string.IsNullOrWhiteSpace(i.ProductName) ? i.Product?.Name : i.ProductName;
                                var lineTotal = i.Price * i.Quantity;
                                <tr>
                                    <td>@name</td>
                                    <td class="text-end">@i.Quantity</td>
                                    <td class="text-end">@i.Price.ToString("#,0") ₫</td>
                                    <td class="text-end">@lineTotal.ToString("#,0") ₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Tổng:</th>
                                <th class="text-end text-danger">@Model.Total.ToString("#,0") ₫</th>
                            </tr>
                        </tfoot>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
