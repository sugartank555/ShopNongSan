@model ShopNongSan.ViewModels.StoreHomeVM

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <!-- Bộ lọc -->
    <form method="get" class="row g-2 mb-4">
        <div class="col-md-4">
            <select name="categoryId" class="form-select">
                <option value="">— Tất cả danh mục —</option>
                @foreach (var c in Model.Categories)
                {
                    <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">
                        @c.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <input type="text" name="q" value="@Model.Q" class="form-control"
                   placeholder="Tìm kiếm sản phẩm..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Lọc</button>
        </div>
    </form>

    <!-- Danh sách sản phẩm -->
    <div class="row g-4">
        @if (Model.Featured != null && Model.Featured.Any())
        {
            foreach (var p in Model.Featured)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm">
                        <td>
                            @if (!string.IsNullOrEmpty(p.ImageUrl))
                            {
                                <img src="@p.ImageUrl" alt="@p.Name" class="product-thumb" />
                            }
                            else
                            {
                                <span class="text-muted">Không có ảnh</span>
                            }
                        </td>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">@p.Name</h6>
                            <p class="text-muted mb-2">@p.Category?.Name</p>
                            <p class="fw-bold text-danger mb-3">
                                @String.Format("{0:N0} ₫", p.Price)
                            </p>
                            <a asp-action="Product"
                               asp-route-slug="@p.Slug"
                               asp-route-id="@p.Id"
                               class="btn btn-outline-primary mt-auto">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Không tìm thấy sản phẩm nào.
                </div>
            </div>
        }
    </div>
</div>
